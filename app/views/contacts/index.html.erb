<div class="page-header">
<h1>Contacts</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Twitter</th>
      <th>Phone</th>
      <th>Actions
      </th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <td><%= ::Temple::Utils.escape_html((link_to contact.id, contact_path(contact))) %></td>
      <td><%= ::Temple::Utils.escape_html((contact.name)) %></td>
      <td><%= ::Temple::Utils.escape_html((contact.email)) %></td>
      <td><%= ::Temple::Utils.escape_html((contact.twitter)) %></td>
      <td><%= ::Temple::Utils.escape_html((contact.phone)) %></td>
      <td>
        <%= link_to "Edit", edit_contact_path(contact), class: "btn btn-primary btn-xs" %>
        <%= link_to "Destroy", contact_path(contact), 
            method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Contact", new_contact_path, class: "btn btn-primary" %>
