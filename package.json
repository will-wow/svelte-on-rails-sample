{
  "name": "svelte-on-rails",
  "private": false,
  "dependencies": {
    "@rails/webpacker": "https://github.com/rails/webpacker.git",
    "svelte": "^3.9.1",
    "webpacker-svelte": "^0.0.0"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "svelte-loader": "^2.13.6",
    "webpack-dev-server": "^3.8.0"
  },
  "scripts": {
    "lint": "npm-run-all -c lint:*",
    "lint:prettier": "prettier --check '**/*.{js,json,md,svelte}'",
    "lint:eslint": "eslint app/javascript/src/",
    "format": "npm-run-all -c format:*",
    "format:eslint": "eslint --fix app/javascript/src/",
    "format:prettier": "prettier --write '**/*.{js,json,md,svelte}'"
  }
}
